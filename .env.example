# =============================================================================
# RATE LIMITING
# =============================================================================

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# Login attempt rate limit (attempts per minute)
LOGIN_RATE_LIMIT=5

# Message sending rate limit (messages per minute per tenant)
MESSAGE_RATE_LIMIT=100

# =============================================================================
# PLAN LIMITS
# =============================================================================

# These can also be configured in config/plans.php

# Free Plan
PLAN_FREE_SENDER_IDS=1
PLAN_FREE_MONTHLY_MESSAGES=1000
PLAN_FREE_USERS=2

# Pro Plan
PLAN_PRO_SENDER_IDS=5
PLAN_PRO_MONTHLY_MESSAGES=50000
PLAN_PRO_USERS=10

# Enterprise Plan (-1 = unlimited)
PLAN_ENTERPRISE_SENDER_IDS=-1
PLAN_ENTERPRISE_MONTHLY_MESSAGES=-1
PLAN_ENTERPRISE_USERS=-1

# =============================================================================
# CREDIT PRICING (per message)
# =============================================================================

# SMS pricing (in cents)
CREDIT_PRICE_SMS_LOCAL=2
CREDIT_PRICE_SMS_INTERNATIONAL=5

# WhatsApp pricing (in cents)
CREDIT_PRICE_WHATSAPP_LOCAL=1
CREDIT_PRICE_WHATSAPP_INTERNATIONAL=3

# Minimum credit top-up amount (in credits)
CREDIT_MIN_TOPUP=100

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================

# Google Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=0.2

# =============================================================================
# SEO CONFIGURATION
# =============================================================================

# Default meta description
SEO_DEFAULT_DESCRIPTION="Send bulk SMS and WhatsApp messages with ease"

# Default meta keywords
SEO_DEFAULT_KEYWORDS="bulk sms, whatsapp messaging, sms gateway"

# Default OG image
SEO_DEFAULT_OG_IMAGE="${APP_URL}/images/og-image.jpg"

# Sitemap generation frequency (daily, weekly, monthly)
SEO_SITEMAP_FREQUENCY=weekly

# =============================================================================
# GDPR & COMPLIANCE
# =============================================================================

# Cookie consent banner
GDPR_COOKIE_CONSENT_ENABLED=true

# Data retention period (days)
GDPR_DATA_RETENTION_DAYS=365

# Allow users to export their data
GDPR_ALLOW_DATA_EXPORT=true

# Allow users to delete their account
GDPR_ALLOW_ACCOUNT_DELETION=true

# =============================================================================
# SECURITY
# =============================================================================

# Force HTTPS in production
FORCE_HTTPS=false

# CORS allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS=https://app.example.com,https://admin.example.com

# Password min length
PASSWORD_MIN_LENGTH=8

# Password requires special characters
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session timeout (minutes)
SESSION_TIMEOUT=120

# =============================================================================
# WEBHOOK ENDPOINTS (for receiving callbacks)
# =============================================================================

# Twilio webhook base URL (for delivery reports)
WEBHOOK_TWILIO_BASE_URL="${APP_URL}/webhooks/twilio"

# Stripe webhook base URL (for payment confirmations)
WEBHOOK_STRIPE_BASE_URL="${APP_URL}/webhooks/stripe"

# Paystack webhook base URL
WEBHOOK_PAYSTACK_BASE_URL="${APP_URL}/webhooks/paystack"

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Enable debug bar (laravel-debugbar package)
DEBUGBAR_ENABLED=true

# Telescope (Laravel monitoring tool)
TELESCOPE_ENABLED=false

# Fake SMS sending (for testing, doesn't actually send)
SMS_FAKE_MODE=false

# Test phone number (receives all test messages)
SMS_TEST_PHONE_NUMBER=

# =============================================================================
# CRON & SCHEDULED TASKS
# =============================================================================

# Enable scheduled message processing
SCHEDULE_MESSAGES_ENABLED=true

# Enable analytics aggregation cron
SCHEDULE_ANALYTICS_ENABLED=true

# Analytics aggregation frequency (hourly, daily)
SCHEDULE_ANALYTICS_FREQUENCY=daily

# =============================================================================
# CUSTOM APP SETTINGS
# =============================================================================

# Allow tenant self-registration
ALLOW_TENANT_REGISTRATION=true

# Require email verification for new tenants
REQUIRE_EMAIL_VERIFICATION=true

# Default tenant plan for new registrations
DEFAULT_TENANT_PLAN=free

# New tenant welcome credits
NEW_TENANT_WELCOME_CREDITS=10

# Maximum file upload size (MB) for contact imports
MAX_CONTACT_IMPORT_SIZE=5

# Maximum contacts per import
MAX_CONTACTS_PER_IMPORT=10000

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Slack notifications (for admin alerts)
# SLACK_WEBHOOK_URL=

# Discord notifications
# DISCORD_WEBHOOK_URL=

# Intercom (customer support)
# INTERCOM_APP_ID=

# Crisp Chat
# CRISP_WEBSITE_ID=

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================

# Database backup enabled

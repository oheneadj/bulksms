# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME="BulkSMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://bulksms.arnsoninnovate.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=bulk_sms_app
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Alternative: MySQL
# DB_CONNECTION=mysql
# DB_PORT=3306

# =============================================================================
# CACHE & SESSION
# =============================================================================

# Development: file, database
# Production: redis (recommended)
CACHE_STORE=file
CACHE_PREFIX=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================

# Development: database
# Production: redis (recommended)
QUEUE_CONNECTION=database

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Redis for queue (if different from main Redis)
REDIS_QUEUE_DB=1

# Redis for cache (if different from main Redis)
REDIS_CACHE_DB=2

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="arnsoninnovategh@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

# Looking to send emails in production? Check out our Email API/SMTP product!

# Mailgun
# MAILGUN_DOMAIN=
# MAILGUN_SECRET=
# MAILGUN_ENDPOINT=api.mailgun.net

# Postmark
# POSTMARK_TOKEN=

# SendGrid
# SENDGRID_API_KEY=

# =============================================================================
# LOGGING
# =============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# BROADCASTING (Optional - for real-time features)
# =============================================================================

BROADCAST_CONNECTION=log
# BROADCAST_CONNECTION=pusher

# Pusher
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
